<head>
  <title>RE:space</title>
  
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>

  <%= csrf_meta_tags %>
  <style>
    body{
      font-family: 'SeoulHangangM';
    }
    .left{
     margin-right: 10%; 
    }
    .logo{
      font-family: 'designhouseOTFLight00';
      font-size: 50px;
      color: #BCE27F;
    }
    .logo:hover{
      color: #BCE27F;
      text-decoration: none;
      background-color: rgba(255,255,255,1);
    }
    #form{
      font-family: 'SeoulHangangM';
    }
    
    .login-container{
        margin-top: 5%;
        padding-top: 2%;
        padding-bottom: 1%;
        border-style: solid;
        border-color: #96B566;
        background-color: #ffffff;
        text-align: center;
        display: none;
    }
    .signUp-container{
      margin-top: 0%;
      height: 80%;
    }
    .form-control{
      height: 6%;
    }
    #signupImg{
      width: 50%;
      height: 95%;
      margin-right: 5%;
      float:left;
    }
    .form-inputs, .form-actions{
      text-align: center;
      width: 50%;
      margin-bottom: 5%;
    }
    #login-button{
      background-color: #96B566;
    }
  </style>
</head>
<body>
<!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light fixed-top" id="mainNav">
      <div class="container">
          <div class="col-md-3">
            <% if user_signed_in? %>
            <%= link_to current_user.name, '/mypage', :class => "left" %>
            <%= link_to "로그아웃", destroy_user_session_path, :class => "left" %>
            <% else %>
            <%= link_to '로그인' ,new_user_session_path, :class => "left" %>
            <% end %>
          </div>
          <center>
            <%= link_to 'RE:space', '/', :class => "logo" %>
          </center>
          <div id="navbarResponsive">
            <ul class="navbar-nav ml-auto">
              <li class="nav-item">
                <a class="nav-link js-scroll-trigger" href="/posts">리모델링 찾기</a>
              </li>
              <li class="nav-item">
                <a class="nav-link js-scroll-trigger" href="/reviews">리뷰</a>
              </li>
              <li class="nav-item">
                <a class="nav-link js-scroll-trigger" href="/notices">공지</a>
              </li>
              <li class="nav-item">
                <a class="nav-link js-scroll-trigger" href="/qnas">QnA</a>
              </li>
            </ul>
          </div>
      </div>
    </nav>
<%= yield %>

</body>
</html>